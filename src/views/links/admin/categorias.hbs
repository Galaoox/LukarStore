    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">

                    <div class="media-body  ml-2  d-none d-lg-block ">
                        <a href="#" data-toggle="modal" data-target="#modificarModal"
                            class="btn btn-success float-right"><i class="ni ni-fat-add text-white"></i>Agregar una
                            categoría</a>
                        <!-- Modal agregar usuarios-->
                        <div class="modal fade" id="modificarModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Agregar Categoría</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <form action="/admin/categorias/agregar" method="post">
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label for="nombre">Categoría</label>
                                                <input type="text" class="form-control" name="categoria" id="nombre"
                                                    value="">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger"
                                                data-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-success">Añadir</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6">
        <!-- Dark table -->
        <div class="row">
            <div class="col">
                <div class="card shadow text-light" style="background-color: #156F6F;">
                    <div class="card-header bg-transparent border-0">
                        <h3 class="text-white mb-0">Categorías en Lista</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-light table-flush" id="LukarStoreDataTable">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col" class="sort" data-sort="id">id</th>
                                    <th scope="col" class="sort" data-sort="nombre">Categoría</th>
                                    <th scope="col" class="sort" data-sort="accion">Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each categorias}}
                                <tr>
                                    <th>{{id_categorias}} </th>
                                    <td class="budget">{{categoria}}</td>
                                    <td>
                                        <a href="#" data-toggle="modal" data-target="#modificarModal{{id_categorias}}"
                                            class="btn btn-success">Modificar</a>

                                        <!--Modal update-->
                                        <div class="modal fade" id="modificarModal{{id_categorias}}" tabindex="-1"
                                            role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Editar Categoría
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>

                                                    <form action="/admin/categorias/editar/{{id_categorias}}"
                                                        method="post">
                                                        <div class="modal-body">
                                                            <div class="form-group">
                                                                <label for="nombre">Nombre</label>
                                                                <input type="text" class="form-control" name="categoria"
                                                                    id="nombre" value="{{categoria}}">
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-danger"
                                                                data-dismiss="modal">Cancelar</button>
                                                            <button type="submit"
                                                                class="btn btn-success">Editar</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <a href="#" data-toggle="modal" data-target="#eliminarModal{{id_categorias}}"
                                            class="btn btn-danger">Eliminar</a>
                                        <div class="modal fade -large" id="eliminarModal{{id_categorias}}" tabindex="-1"
                                            role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog " role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Eliminar
                                                            Categoría
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>

                                                    <form action="/admin/categorias/eliminar/{{id_categorias}}" method="get">
                                                        <div class="modal-body">
                                                            <div class="form-group">
                                                                <b><label for="nombre">¿Está seguro que desea eliminar
                                                                        ésta categoría?</label></b>
                                                            </div>
                                                            <div class="form-group">
                                                                <b><label for="nombre">Categoría: </label></b>
                                                                <label for="nombre">{{categoria}}</label><br>
                                                            </div>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-danger"
                                                                data-dismiss="modal">Cancelar</button>
                                                            <button type="submit"
                                                                class="btn btn-success">Eliminar</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    {{/each}}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>